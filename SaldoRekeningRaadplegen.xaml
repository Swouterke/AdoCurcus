<Window x:Class="AdoCurcus.SaldoRekeningRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoCurcus"
        mc:Ignorable="d"
        Title="SaldoRekeningRaadplegen" Height="300" Width="300">
    <StackPanel>
        <Label Content="Rekening nr.:"/>
        <TextBox Name="rekeningnr" Height="24" Width="120"/>
        <Button Name="saldo" Content="Saldo" Height="24" Width="80" Margin="20" Click="saldo_Click"/>
        <Label Name="waarde"/>
    </StackPanel>
</Window>
