<Window x:Class="AdoCurcus.RekeningInfoRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoCurcus"
        mc:Ignorable="d"
        Title="RekeningInfoRaadplegen" Height="300" Width="300">
    <StackPanel>
        <Label Content="Rekeningnr:"/>
        <TextBox Name="textBoxRekeningNr" Height="24" Width="150"/>
        <Button Name="buttonInfo" Height="24" Width="100" Content="Info" Margin="20" Click="buttonInfo_Click"/>
        <Label Name="labelSaldo" Margin="20"/>
        <Label Name="labelNaam" Margin="20"/>
        <Label Name="labelStatus" Margin="20"/>
    </StackPanel>
</Window>
